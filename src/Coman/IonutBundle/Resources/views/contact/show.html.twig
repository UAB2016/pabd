{% extends '@ComanIonut/layout.html.twig' %}

{% block main %}
    <h1>Message Show</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ contact.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ contact.subject }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ contact.message }}</td>
            </tr>
        </tbody>
    </table>

    <hr>

    <ul class="list-unstyled">
        <li>
            <a class="btn btn-primary" href="{{ path('coman-ionut-blog_contact_index') }}">See All Messages</a>
        </li>
    </ul>
{% endblock %}
